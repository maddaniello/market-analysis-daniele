# OpenAI Configuration (OBBLIGATORIA)
OPENAI_API_KEY=sk-your-openai-api-key-here

# SEMRush Configuration (OPZIONALE - per dati SEO reali)
SEMRUSH_API_KEY=your-semrush-api-key-here

# Database Configuration (per versioni future)
DATABASE_URL=sqlite:///marketing_analyzer.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/marketing_analyzer.log

# Scraping Configuration
SCRAPING_DELAY=1
MAX_RETRIES=3
TIMEOUT=30

# Rate Limiting
OPENAI_REQUESTS_PER_MINUTE=20
SEMRUSH_REQUESTS_PER_MINUTE=10

# Cache Configuration
CACHE_TTL=3600
CACHE_SIZE=1000

# Social Media APIs (per versioni future)
INSTAGRAM_ACCESS_TOKEN=your-instagram-token
FACEBOOK_ACCESS_TOKEN=your-facebook-token
YOUTUBE_API_KEY=your-youtube-key
TIKTOK_API_KEY=your-tiktok-key

# Email Configuration (per notifiche)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Webhook Configuration (per integrazioni)
WEBHOOK_URL=https://your-webhook-url.com
WEBHOOK_SECRET=your-webhook-secret

# Feature Flags
ENABLE_REAL_SCRAPING=false
ENABLE_SOCIAL_SCRAPING=false
ENABLE_FINANCIAL_DATA=true
ENABLE_COMPETITOR_ANALYSIS=true
ENABLE_EXPORT_PDF=false

# Development Settings
DEBUG=false
TESTING=false
ENVIRONMENT=production
